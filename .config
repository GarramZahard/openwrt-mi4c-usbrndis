CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt76x8=y
CONFIG_TARGET_ramips_mt76x8_DEVICE_xiaomi_mi-router-4c=y

# USB & RNDIS
CONFIG_PACKAGE_kmod-usb-core=y
CONFIG_PACKAGE_kmod-usb2=y
CONFIG_PACKAGE_kmod-usb-net=y
CONFIG_PACKAGE_kmod-usb-net-cdc-ether=y
CONFIG_PACKAGE_kmod-usb-net-rndis=y
CONFIG_PACKAGE_usbutils=y

# LuCI ringan (non-SSL)
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-mod-admin-full=y
CONFIG_PACKAGE_luci-theme-openwrt=y
CONFIG_PACKAGE_uhttpd=y
CONFIG_PACKAGE_rpcd=y

# CLI tools
CONFIG_PACKAGE_opkg=y
CONFIG_PACKAGE_uci=y
CONFIG_PACKAGE_busybox=y
CONFIG_PACKAGE_dropbear=y
CONFIG_PACKAGE_logd=y
CONFIG_PACKAGE_urandom-seed=y

# Networking dasar
CONFIG_PACKAGE_dnsmasq=y
CONFIG_PACKAGE_dnsmasq-full=n
CONFIG_PACKAGE_firewall4=y
CONFIG_PACKAGE_kmod-nft-core=y
CONFIG_PACKAGE_kmod-nft-offload=y
CONFIG_PACKAGE_nftables-json=y

# Nonaktifkan hal yang tidak perlu
CONFIG_PACKAGE_ppp=n
CONFIG_PACKAGE_pppoe=n
CONFIG_PACKAGE_luci-ssl-openssl=n
CONFIG_PACKAGE_wpad-basic-mbedtls=y
CONFIG_PACKAGE_luci-app-firewall=y

# Ukuran partisi dan optimasi
CONFIG_TARGET_IMAGES_GZIP=n
CONFIG_TARGET_ROOTFS_SQUASHFS=y
CONFIG_STRIP_KERNEL_EXPORTS=y
CONFIG_KERNEL_DEBUG=n
CONFIG_TARGET_KERNEL_PARTSIZE=2048
CONFIG_TARGET_ROOTFS_PARTSIZE=12000
