# Jangan compress dengan gzip (hemat ukuran)
CONFIG_TARGET_IMAGES_GZIP=n

# Strip symbol dari kernel dan modul
CONFIG_STRIP_KERNEL_EXPORTS=y
CONFIG_KERNEL_DEBUG=n

# Gunakan squashfs (default, terkompresi maksimal)
CONFIG_TARGET_ROOTFS_SQUASHFS=y

# Jangan terlalu besar partisi rootfs
CONFIG_TARGET_ROOTFS_PARTSIZE=14000
CONFIG_TARGET_KERNEL_PARTSIZE=2048

# Jangan include luci ssl
# CONFIG_PACKAGE_luci-ssl-openssl is not set

# Nonaktifkan ipv6 dan ppp
CONFIG_PACKAGE_ipv6=n
CONFIG_PACKAGE_ppp=n

# Kalau perlu: ganti luci-theme jadi openwrt
CONFIG_PACKAGE_luci-theme-bootstrap=n
CONFIG_PACKAGE_luci-theme-openwrt=y

# Ubah semua paket opsional ke modular (m)
CONFIG_PACKAGE_usbutils=m
CONFIG_PACKAGE_kmod-usb-net-cdc-ether=m
